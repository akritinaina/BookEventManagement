@model Book_Reading_Event_Management.Models.EventDetailsModel

@{
    ViewBag.Title = "ViewBookEvents1";
    var email = ViewBag.user;
    Layout = "~/Views/Shared/_LoggersLayout.cshtml";
}

<h2>Event Details</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.startTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.startTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.otherDetails)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.otherDetails)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalInvitees)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalInvitees)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @using (Html.BeginForm())
            {
                @Html.TextAreaFor(model => model.Comments, new { @class = "form-control" })
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="color:green">
                        @ViewBag.Message

                    </div>
                </div>
            }
        </dd>
       
        <dt>
            @Html.DisplayNameFor(model => model.oldComments)
        </dt>
        <dd>
            <ul>
            @foreach (string comm in @Model.oldComments)
            {
                <li>@comm</li>
            }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "UpdateEvent", new {oldtitle = Model.Title,user=email},null) |
    @Html.ActionLink(linkText:"Back to HomePage",actionName: "LoginHomePage",controllerName:"User",routeValues:new { user = email },htmlAttributes:null)
   
</p>
